{
  "include": ["src/**/*"],
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ES5",
    "module": "ES2015",
    "allowJs": true,
    "lib": ["ESNext", "DOM"],
    "outDir": "dist",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  }
}
